<div class="row">
	<div class="col-md-7" style="border-right: 1px solid #BEBEBE;line-height: 100px;">
		<div class="row">
			<div class="col-md-3">
				<label style="font-size: 18px;">Select Category:</label>
			</div>
		
				<%= form_tag do %>
				
				<%= select_tag "categories", options_from_collection_for_select(@categories, "id", "name"),:class=>'btn-group btn btn-default dropdown-toggle' ,:multiple=>false, :prompt =>"Select category",
	 			:onchange => "onCategory(this.value)" %>
	 	</div>
	 	<br /><br />
	 	<div class="row">
	 		<div class="col-md-6" style="margin-top: -200px;">
		 		<div id="categoryQuotes">
				<%= render :partial => 'category_quotes',:object => @qoutes %>
			</div>
		
			</div>
	 	</div>
	 	
	 	<div class="row">
	 		<div class="col-md-12">
		 		<div id="categoryImages">
		 			<%= render :partial => 'category_images',:object => @category_images %>
				</div>
			</div>
	 	</div>
	 	
	</div>
	<div class="col-md-5">
		
	</div>
</div>
<% end %>